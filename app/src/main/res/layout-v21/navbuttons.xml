<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/left_nav"
        android:layout_width="70sp"
        android:layout_height="40sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/circle_nav"
        android:contentDescription="@string/previous"
        android:foreground="@drawable/ic_action_left"
        android:foregroundGravity="center"
        android:onClick="leftNav"
        android:padding="10sp" />

    <Button
        android:id="@+id/refresh_dots"
        android:layout_width="70sp"
        android:layout_height="40sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="105sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/circle_nav"
        android:contentDescription="@string/refresh"
        android:foreground="@drawable/ic_action_refresh"
        android:foregroundGravity="center"
        android:nestedScrollingEnabled="false"
        android:onClick="refreshDots"
        android:padding="10sp" />

    <Button
        android:id="@+id/home"
        android:layout_width="70sp"
        android:layout_height="40sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="105sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/circle_nav"
        android:contentDescription="@string/home"
        android:foreground="@drawable/ic_action_action_home"
        android:foregroundGravity="center"
        android:onClick="home"
        android:padding="10sp" />

    <Button
        android:id="@+id/right_nav"
        android:layout_width="70sp"
        android:layout_height="40sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/circle_nav"
        android:contentDescription="@string/next"
        android:foreground="@drawable/ic_action_right"
        android:foregroundGravity="center"
        android:onClick="rightNav"
        android:padding="10sp" />

</RelativeLayout>