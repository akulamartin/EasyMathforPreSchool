<?xml version="1.0" encoding="utf-8"?>
<androidx.percentlayout.widget.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.martin.easymathforpreschool.Score">

    <ImageView
        android:id="@+id/DDLogo"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/logo"
        android:src="@drawable/easymathlogo"
        app:layout_heightPercent="15%" />

    <TextView
        android:id="@+id/textComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DDLogo"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp"
        android:text="@string/quiz_complete"
        android:textColor="@color/colorWhite"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textYourScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textComplete"
        android:layout_centerHorizontal="true"
        android:text="@string/your_score"
        android:textColor="@color/colorWhite"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textYourScore"
        android:layout_centerHorizontal="true"
        android:includeFontPadding="false"
        android:text="@string/_0"
        android:textColor="@color/colorWhite"
        android:textSize="150sp" />

    <Button
        android:id="@+id/home"
        android:layout_width="70sp"
        android:layout_height="40sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/circle_nav"
        android:contentDescription="@string/home"
        android:foreground="@drawable/ic_action_action_home"
        android:foregroundGravity="center"
        android:onClick="home"
        android:padding="10sp" />


</androidx.percentlayout.widget.PercentRelativeLayout>
